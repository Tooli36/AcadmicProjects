<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flower1"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/create_new_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#050505"
            android:shadowRadius="40"
            android:text="Edit The Task"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textSize="45dp"
            android:textStyle="bold"/>

        <TextView

            android:id="@+id/title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Description:"
            android:textSize="20dp" />

        <EditText

            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView

            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="Date:"
            android:textSize="20dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selected_date"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_date"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:background="@drawable/calendar"
                android:text="Select Date" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/option_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Select Status:"
            android:textSize="20dp" />

        <RadioGroup

            android:id="@+id/status_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/start_radio"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:buttonTint="#0037FF"
                android:checked="true"
                android:text="Start" />

            <RadioButton

                android:id="@+id/done_radio"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0000"
                android:text="Done" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/priority_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Priority:"
            android:textSize="20dp" />

        <Spinner

            android:id="@+id/priority_to_select"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/shape"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button

            android:id="@+id/update"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="70dp"
            android:background="@drawable/shape"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />

        <Button

            android:id="@+id/delete"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageButton

            android:id="@+id/return_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rewind" />
    </RelativeLayout>
</LinearLayout>
